# ============================================================================
# VibePoster 环境变量配置模板
# ============================================================================

# 统一管理 API KEY
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ----------------------------------------------------------------------------

# Planner Agent 配置（必填）
PLANNER_PROVIDER=deepseek
PLANNER_API_KEY=your_planner_api_key_here
PLANNER_BASE_URL=https://api.deepseek.com
PLANNER_MODEL=deepseek-chat
PLANNER_TEMPERATURE=0.7

# Planner 专用参数（可选）
# PLANNER_DEFAULT_INTENT=poster

# ----------------------------------------------------------------------------

# Visual Agent 配置（必填）
VISUAL_PROVIDER=deepseek
VISUAL_API_KEY=your_visual_api_key_here
VISUAL_BASE_URL=https://api.deepseek.com
VISUAL_MODEL=deepseek-chat
VISUAL_TEMPERATURE=0.2

# Visual 素材搜索配置
# Flux 文生图（优先，推荐）
VISUAL_FLUX_API_KEY=your_flux_api_key_here
# VISUAL_FLUX_API_URL=https://api.fluxapi.ai/api/v1/flux/kontext/generate
# VISUAL_FLUX_MODEL=flux-kontext-pro

# Pexels 图片搜索（备选）
VISUAL_PEXELS_API_KEY=your_pexels_api_key_here

# Visual 其他参数（可选）
# VISUAL_DEFAULT_POSITION=center_bottom

# ----------------------------------------------------------------------------

# Layout Agent 配置（必填）
LAYOUT_PROVIDER=deepseek
LAYOUT_API_KEY=your_layout_api_key_here
LAYOUT_BASE_URL=https://api.deepseek.com
LAYOUT_MODEL=deepseek-reasoner
LAYOUT_TEMPERATURE=0.1

# ----------------------------------------------------------------------------

# Critic Agent 配置（必填）
CRITIC_PROVIDER=deepseek
CRITIC_API_KEY=your_critic_api_key_here
CRITIC_BASE_URL=https://api.deepseek.com
CRITIC_MODEL=deepseek-reasoner
CRITIC_TEMPERATURE=0.0

# Critic 专用参数（可选）
# CRITIC_MAX_RETRY_COUNT=2
# CRITIC_DEFAULT_STATUS=PASS

# ----------------------------------------------------------------------------
# 画布配置（可选）
# ----------------------------------------------------------------------------
# CANVAS_WIDTH=1080
# CANVAS_HEIGHT=1920
# CANVAS_BG_COLOR=#FFFFFF

# ----------------------------------------------------------------------------
# CORS 配置（可选）
# ----------------------------------------------------------------------------
# CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
# CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS_ALLOW_HEADERS=Content-Type,Authorization
# CORS_ALLOW_CREDENTIALS=false

# ============================================================================
# 必填参数清单（5 个）
# ============================================================================
# ✅ PLANNER_API_KEY
# ✅ VISUAL_API_KEY
# ✅ VISUAL_FLUX_API_KEY 或 VISUAL_PEXELS_API_KEY（至少配置一个）
# ✅ LAYOUT_API_KEY
# ✅ CRITIC_API_KEY

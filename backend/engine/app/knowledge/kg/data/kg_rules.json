  "design_strategies": {
    "color": {
      "Monochromatic": {
        "description": "单色系配色",
        "method": "使用同一色相的不同明度和饱和度",
        "effect": "统一、和谐、专业"
      },
      "Complementary": {
        "description": "互补色配色",
        "method": "使用色轮上相对的两种颜色",
        "effect": "对比强烈、视觉冲击、活力"
    },
      "Analogous": {
        "description": "类似色配色",
        "method": "使用色轮上相邻的颜色",
        "effect": "和谐、自然、舒适"
      },
      "Triadic": {
        "description": "三色配色",
        "method": "使用色轮上等距的三种颜色",
        "effect": "丰富、平衡、创意"
      },
      "Split-Complementary": {
        "description": "分裂互补色配色",
        "method": "一种颜色加其互补色两侧的颜色",
        "effect": "对比但不冲突、现代感"
      }
    },
    "layout": {
      "Stability": {
        "description": "稳定布局",
        "patterns": ["Grid", "Symmetrical", "Centered"],
        "effect": "可靠、专业、平衡"
